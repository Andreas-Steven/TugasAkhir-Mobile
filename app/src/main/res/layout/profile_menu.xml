<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level"
    android:background="#00FFFF">

    <LinearLayout
        android:id="@+id/linearLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutImage"
        android:background="#99000000">

        <TextView
            android:id="@+id/Nama"
            android:layout_width="435dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10px"
            android:text="                    NAME"
            android:textColor="#FFFFFF"
            android:textSize="14pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutUmur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutNama"
        android:background="#99000000">
        <TextView
            android:id="@+id/Nama"
            android:layout_width="435dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10px"
            android:text="                      AGE"
            android:textColor="#FFFFFF"
            android:textSize="14pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLove"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutUmur"
        android:background="#99000000">
        <TextView
            android:id="@+id/Nama"
            android:layout_width="435dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10px"
            android:text="                    EMAIL"
            android:textColor="#FFFFFF"
            android:textSize="14pt" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
